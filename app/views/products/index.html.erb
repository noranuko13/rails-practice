<p id="notice"><%= notice %></p>

<h1>Products</h1>

<%= search_form_for @q do |f| %>
  <%= f.label :name %>
  <%= f.search_field :name_cont %> ※部分一致

  <%= f.label :price %>
  <%= f.number_field :price_gteq %>以上
  <%= f.number_field :price_lt %>未満

  <%= f.submit %>
<% end %>

<%= search_form_for(@q, format: :csv) do |f| %>
  <%= f.hidden_field :name_cont %>
  <%= f.hidden_field :price_gteq %>
  <%= f.hidden_field :price_lt %>
  <%= f.submit 'CSV Download' %>
<% end %>

<%= form_tag destroy_multiple_products_path, method: :delete do %>
  <%= submit_tag 'Delete selected' %>

  <table class="table table-product">
    <thead class="thead-light">
      <tr>
        <th scope="col"></th>
        <th scope="col"><%= sort_link(@q, :name) %></th>
        <th scope="col"><%= sort_link(@q, :price) %></th>
        <th scope="col">Description</th>
        <th colspan="2" scope="col"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= check_box_tag "product_ids[]", product.id %></td>
          <td><%= link_to product.name, product %></td>
          <td class="product-price">
            <%= number_with_delimiter number_with_precision(product.price, strip_insignificant_zeros: true) %>
          </td>
          <td><%= product.description %></td>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>

<br>

